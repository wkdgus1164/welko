<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/signinTitleTextView"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:layout_marginTop="131dp"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:text="WELKO"
        android:textAlignment="center"
        android:textColor="@color/title_color"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signinEmailTextView"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/notosans_regular"
        android:letterSpacing="0"
        android:text="Email"
        android:textColor="@color/body_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinTitleTextView" />

    <TextView
        android:id="@+id/signinPwTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/notosans_regular"
        android:letterSpacing="0"
        android:text="Password"
        android:textColor="@color/body_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinEmail" />

    <EditText
        android:id="@+id/signinEmail"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/notosans_medium"
        android:hint="abc@gmail.com"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/unfocused_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinEmailTextView" />

    <EditText
        android:id="@+id/signinPw"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:fontFamily="@font/notosans_medium"
        android:hint="****************"
        android:inputType="textPassword"
        android:textColorHint="@color/unfocused_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinPwTextView" />

    <Button
        android:id="@+id/signinBtn"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_style"
        android:drawableLeft="@drawable/ic_airplane"
        android:fontFamily="@font/notosans_bold"
        android:paddingLeft="12dp"
        android:paddingRight="40dp"
        android:text="SIGN IN"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinPw" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="139dp"
        android:layout_height="20dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/notosans_regular"
        android:text="Donâ€™t have an account?"
        android:textColor="@color/body_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinBtn" />

    <TextView
        android:id="@+id/signupTextView"
        android:layout_width="52dp"
        android:layout_height="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/notosans_bold"
        android:letterSpacing="0"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="@color/sub_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>