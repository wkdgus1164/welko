<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="#FFFFFF"
    android:keyboardNavigationCluster="false"
    tools:context=".IntroActivity">

    <TextView
        android:id="@+id/introTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="185dp"
        android:autoSizeTextType="none"
        android:fontFamily="@font/notosans_bold"
        android:letterSpacing="0"
        android:text="WELKO"
        android:textAlignment="center"
        android:textColor="@color/title_color"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/introSubtTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosans_medium"
        android:letterSpacing="0.05"
        android:text="Welcome to Korea"
        android:textAlignment="center"
        android:textColor="@color/body_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introTitleTextView" />

    <ImageView
        android:id="@+id/introLogoImageView"
        android:layout_width="220dp"
        android:layout_height="174dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introSubtTitleTextView"
        app:srcCompat="@drawable/intro_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>